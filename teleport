Instance.new("UICorner", tpBtn).CornerRadius = UDim.new(0, 6)

tpBtn.MouseButton1Click:Connect(function()
    if selectedNPC then
        fastTeleportTo(selectedNPC)
    else
        tpBtn.Text = "â— NPC ì„ íƒí•˜ì„¸ìš”"
        wait(1)
        tpBtn.Text = "ğŸš€ ì„ íƒí•œ NPCë¡œ ì´ë™"
    end
end)

-- ë¦¬ë¡œë“œ ë²„íŠ¼ ì—°ê²°
