-- Move Button
local moveBtn = Instance.new("TextButton", frame)
moveBtn.Size = UDim2.new(1, -20, 0, 40)
moveBtn.Position = UDim2.new(0, 10, 1, -50)
moveBtn.Text = "🚀 이동"
moveBtn.Font = Enum.Font.SourceSansBold
moveBtn.TextSize = 16
moveBtn.TextColor3 = Color3.new(1,1,1)
moveBtn.BackgroundColor3 = Color3.fromRGB(0,120,255)
Instance.new("UICorner", moveBtn).CornerRadius = UDim.new(0,6)
moveBtn.Visible = false  -- Hidden until player selected
moveBtn.Enabled = false

-- State
local selectedPlayer = nil
local buttons = {}

-- Fly To Position Function
local function flyTo(pos)
    print("비행 시작 to", pos)
    -- NoClip
    for _, part in ipairs(character:GetDescendants()) do
        if part:IsA("BasePart") then
            part.CanCollide = false
        end
    end
    local speed = 200
    local startPos = hrp.Position
    local direction = (pos - startPos).Unit
    local distance = (pos - startPos).Magnitude
    local startTime = tick()
    local conn
    conn = RunService.Heartbeat:Connect(function(dt)
        local elapsed = (tick() - startTime) * speed
        if elapsed >= distance then
            hrp.CFrame = CFrame.new(pos)
            conn:Disconnect()
        else
            hrp.CFrame = hrp.CFrame + direction * speed * dt
        end
    end)
end

-- Refresh Player List
local function refreshList()
    -- Clear old buttons
    for _, btn in ipairs(buttons) do
        btn:Destroy()
    end
    buttons = {}
    selectedPlayer = nil
    moveBtn.Visible = false
    moveBtn.Enabled = false

    local keyword = searchBox.Text:lower()
    for _, plr in ipairs(Players:GetPlayers()) do
        if plr ~= player and plr.Name:lower():find(keyword) then
            local btn = Instance.new("TextButton")
            btn.Size = UDim2.new(1, 0, 0, 30)
            btn.Text = plr.Name
            btn.Font = Enum.Font.SourceSans
            btn.TextSize = 14
            btn.TextColor3 = Color3.new(1,1,1)
            btn.BackgroundColor3 = Color3.fromRGB(70,70,70)
            Instance.new("UICorner", btn).CornerRadius = UDim.new(0,4)
            btn.Parent = scroll

            btn.MouseButton1Click:Connect(function()
                -- Highlight selection
                for _, b in ipairs(buttons) do
                    b.BackgroundColor3 = Color3.fromRGB(70,70,70)
                end
                btn.BackgroundColor3 = Color3.fromRGB(0,170,255)
                selectedPlayer = plr
                moveBtn.Visible = true
                moveBtn.Enabled = true
            end)

            table.insert(buttons, btn)
        end
    end
end

-- Move Button Click
moveBtn.MouseButton1Click:Connect(function()
    if selectedPlayer and selectedPlayer.Character and selectedPlayer.Character:FindFirstChild("HumanoidRootPart") then
        local targetHRP = selectedPlayer.Character.HumanoidRootPart
        flyTo(targetHRP.Position + Vector3.new(0,3,0))
    else
        warn("선택된 플레이어 없음 or HumanoidRootPart missing")
    end
end)

-- Connections
searchBox:GetPropertyChangedSignal("Text"):Connect(refreshList)
Players.PlayerAdded:Connect(refreshList)
Players.PlayerRemoving:Connect(refreshList)

-- Initial load
refreshList()
