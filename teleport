local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local RunService = game:GetService("RunService")
local UIS = game:GetService("UserInputService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- GUI ìƒì„±
local gui = Instance.new("ScreenGui")
gui.Name = "TeleportUI"
gui.ResetOnSpawn = false
gui.Parent = playerGui

-- í”„ë ˆì„
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 400)
frame.Position = UDim2.new(0.85, -150, 0.5, -200)
frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
frame.Active = true
frame.Visible = true  -- UIê°€ ê¸°ë³¸ì ìœ¼ë¡œ ë³´ì´ë„ë¡ ì„¤ì •
frame.Parent = gui
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 10)

-- íƒ€ì´í‹€
local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 30)
title.Text = "ğŸ§­ NPC ë¹ ë¥¸ì´ë™"
title.BackgroundTransparency = 1
title.Font = Enum.Font.SourceSansBold
title.TextSize = 18
title.TextColor3 = Color3.new(1, 1, 1)

-- ë‹¤ì‹œ ë¶ˆëŸ¬ì˜¤ê¸° ë²„íŠ¼
local reloadBtn = Instance.new("TextButton", frame)
reloadBtn.Size = UDim2.new(1, -20, 0, 30)
reloadBtn.Position = UDim2.new(0, 10, 0, 40)
reloadBtn.Text = "ğŸ”„ NPC ë‹¤ì‹œ ë¶ˆëŸ¬ì˜¤ê¸°"
reloadBtn.Font = Enum.Font.SourceSansBold
reloadBtn.TextSize = 14
reloadBtn.TextColor3 = Color3.new(1, 1, 1)
reloadBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
Instance.new("UICorner", reloadBtn).CornerRadius = UDim.new(0, 6)

-- ìŠ¤í¬ë¡¤ ì»¨í…Œì´ë„ˆ
local scrollFrame = Instance.new("ScrollingFrame", frame)
scrollFrame.Size = UDim2.new(1, -20, 1, -140)
scrollFrame.Position = UDim2.new(0, 10, 0, 80)
scrollFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
scrollFrame.ScrollBarThickness = 8
scrollFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
scrollFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y
scrollFrame.ClipsDescendants = true

local UIList = Instance.new("UIListLayout", scrollFrame)
UIList.Padding = UDim.new(0, 5)
UIList.SortOrder = Enum.SortOrder.LayoutOrder

-- NPC ë¶ˆëŸ¬ì˜¤ê¸° í•¨ìˆ˜
local npcButtons = {}

local function loadNPCs()
    -- ê¸°ì¡´ NPC ë²„íŠ¼ ì‚­ì œ
    for _, btn in pairs(npcButtons) do
        btn:Destroy()
    end
    npcButtons = {}

    local allNPCs = {}
    for _, obj in ipairs(Workspace:GetDescendants()) do
        if obj:IsA("Model") and obj:FindFirstChild("Humanoid") and obj:FindFirstChild("HumanoidRootPart") then
            table.insert(allNPCs, obj)
        end
    end

    for _, npc in ipairs(allNPCs) do
        local btn = Instance.new("TextButton")
        btn.Size = UDim2.new(1, 0, 0, 25)
        btn.Text = npc.Name
        btn.Font = Enum.Font.SourceSans
        btn.TextSize = 14
        btn.BackgroundColor3 = Color3.fromRGB(90, 90, 90)
        btn.TextColor3 = Color3.new(1, 1, 1)
        Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 4)

        -- NPC ë²„íŠ¼ í´ë¦­ ì‹œ
        btn.MouseButton1Click:Connect(function()
            -- ì„ íƒëœ NPCì— ëŒ€í•œ ì²˜ë¦¬
            print("NPC ì„ íƒë¨: " .. npc.Name)
        end)

        btn.Parent = scrollFrame
        table.insert(npcButtons, btn)
    end
end

-- ë¦¬ë¡œë“œ ë²„íŠ¼ ì—°ê²°
reloadBtn.MouseButton1Click:Connect(loadNPCs)

-- ì²˜ìŒ ë¡œë“œ
loadNPCs()

-- K í‚¤ë¡œ UI ìˆ¨ê¸°ê¸°/ë³´ì´ê¸°
UIS.InputBegan:Connect(function(input, processed)
    if not processed and input.KeyCode == Enum.KeyCode.K then
        frame.Visible = not frame.Visible
    end
end)

-- ë“œë˜ê·¸ ê¸°ëŠ¥ êµ¬í˜„
local dragging, dragInput, dragStart, startPos

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position
    end
end)

frame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement and dragging then
        local delta = input.Position - dragStart
        frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

frame.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end)
