moveBtn.Active = false
moveBtn.TextTransparency = 0.5

-- Internal state
local buttons = {}            -- player â†’ button
local selectedPlayer = nil

-- Build list
local function refreshList()
    -- clear
    for _, btn in pairs(buttons) do btn:Destroy() end
    buttons = {}
    selectedPlayer = nil
    moveBtn.Active = false
    moveBtn.TextTransparency = 0.5

    -- create
    for _, plr in ipairs(Players:GetPlayers()) do
        if plr ~= player and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
            local btn = Instance.new("TextButton", scroll)
            btn.Size = UDim2.new(1,0,0,30)
            btn.Text = plr.Name
            btn.Font = Enum.Font.SourceSans
            btn.TextSize = 14
            btn.TextColor3 = Color3.new(1,1,1)
            btn.BackgroundColor3 = Color3.fromRGB(60,60,60)
            Instance.new("UICorner", btn).CornerRadius = UDim.new(0,4)

            btn.MouseButton1Click:Connect(function()
                -- deselect others
                for _, o in pairs(buttons) do
                    o.BackgroundColor3 = Color3.fromRGB(60,60,60)
                end
                btn.BackgroundColor3 = Color3.fromRGB(0,170,255)
                selectedPlayer = plr
                moveBtn.Active = true
                moveBtn.TextTransparency = 0
            end)

            buttons[plr] = btn
        end
    end
end

-- Flight function
local function flyTo(targetPos)
    -- noclip
    for _, part in ipairs(char:GetDescendants()) do
        if part:IsA("BasePart") then part.CanCollide = false end
    end

    local speed = 200
    local start = hrp.Position
    local dir = (targetPos - start).Unit

    local conn
    conn = RunService.RenderStepped:Connect(function(dt)
        local dist = (targetPos - hrp.Position).Magnitude
        if dist < 3 then
            hrp.CFrame = CFrame.new(targetPos)
            conn:Disconnect()
        else
            hrp.AssemblyLinearVelocity = dir * speed
        end
    end)
end

-- Move button handler
moveBtn.MouseButton1Click:Connect(function()
    if selectedPlayer and selectedPlayer.Character and selectedPlayer.Character:FindFirstChild("HumanoidRootPart") then
        local pos = selectedPlayer.Character.HumanoidRootPart.Position + Vector3.new(0,3,0)
        flyTo(pos)
    end
end)

-- Events
Players.PlayerAdded:Connect(refreshList)
Players.PlayerRemoving:Connect(refreshList)

-- initial
refreshList()
