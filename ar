-- Seoul 라이브러리 로드
local lib = loadstring(game:HttpGet('https://github.com/kagehana/seoul/blob/main/seoul.lua?raw=true'))()
local seoul = lib()

-- 창 생성
local window = seoul:window('AutoSystemUI')

-- 폴더 생성
local folder = window:folder('기능 설정')

-- 자동회피 토글 버튼
folder:toggle({
    name = '자동회피',
    call = function(state)
        _G.AutoDodge = state
        if state then
            print('자동회피 활성화')
            -- 자동회피 기능 시작 코드 추가
        else
            print('자동회피 비활성화')
            -- 자동회피 기능 중지 코드 추가
        end
    end
})

-- 무기 QTE 토글 버튼
folder:toggle({
    name = '무기 QTE',
    call = function(state)
        _G.AutoQTE = state
        if state then
            print('무기 QTE 활성화')
            -- 무기 QTE 기능 시작 코드 추가
        else
            print('무기 QTE 비활성화')
            -- 무기 QTE 기능 중지 코드 추가
        end
    end
})

-- 토리안 QTE 토글 버튼
folder:toggle({
    name = '토리안 QTE',
    call = function(state)
        _G.AutoThorian = state
        if state then
            print('토리안 QTE 활성화')
            -- 토리안 QTE 기능 시작 코드 추가
        else
            print('토리안 QTE 비활성화')
            -- 토리안 QTE 기능 중지 코드 추가
        end
    end
})

-- 무기 선택 드롭다운
folder:dropdown({
    name = '무기 선택',
    elements = {'Sword', 'Spear', 'Magic', 'Dagger', 'Fist'},
    call = function(selected)
        _G.SelectedWeapon = selected
        print('선택된 무기:', selected)
    end
})

-- UI 표시
window:ready()
