local InsertService = game:GetService("InsertService")

local ReGui = loadstring(game:HttpGet('https://raw.githubusercontent.com/depthso/Dear-ReGui/refs/heads/main/ReGui.lua'))()
local PrefabsId = "rbxassetid://" .. ReGui.PrefabsId

--// Declare the Prefabs asset
ReGui:Init({
    Prefabs = InsertService:LoadLocalAsset(PrefabsId)
})

-- TabsWindow 생성
local Window = ReGui:TabsWindow({
    Title = "Tabs window demo!",
    Size = UDim2.fromOffset(300, 200)
})

local Names = {"메인"}

for _, Name in next, Names do
    --// Tab 생성
    local Tab = Window:CreateTab({
        Name = Name
    })

    --// Tab에 Label 추가
    Tab:Label({
        Text = "이곳엔 메인 기능들이 있습니다!"
    })

    --// 자동회피 기능을 위한 체크박스 생성
    local AutoDodgeToggle = Tab:Toggle({
        Text = "자동회피 기능",
        Callback = function(state)
            if state then
                print("자동회피 기능이 활성화되었습니다!")
                -- 여기서 자동 회피 기능 활성화 로직을 추가하세요
                _G.AutoDodge = true
            else
                print("자동회피 기능이 비활성화되었습니다!")
                -- 자동 회피 비활성화 로직
                _G.AutoDodge = false
            end
        end
    })

    --// 토리안 QTE 기능을 위한 체크박스 생성
    local ThorianQTE_Toggle = Tab:Toggle({
        Text = "토리안 QTE 기능",
        Callback = function(state)
            if state then
                print("토리안 QTE 기능이 활성화되었습니다!")
                -- 여기서 토리안 QTE 기능 활성화 로직을 추가하세요
                _G.AutoThorian = true
            else
                print("토리안 QTE 기능이 비활성화되었습니다!")
                -- 토리안 QTE 비활성화 로직
                _G.AutoThorian = false
            end
        end
    })

    --// 무기 QTE 기능을 위한 체크박스 생성
    local WeaponQTE_Toggle = Tab:Toggle({
        Text = "무기 QTE 기능",
        Callback = function(state)
            if state then
                print("무기 QTE 기능이 활성화되었습니다!")
                -- 여기서 무기 QTE 기능 활성화 로직을 추가하세요
                _G.AutoQTE = true
            else
                print("무기 QTE 기능이 비활성화되었습니다!")
                -- 무기 QTE 비활성화 로직
                _G.AutoQTE = false
            end
        end
    })
end
