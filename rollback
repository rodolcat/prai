local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()

-- RemoteEvent 연결
local rollbackEvent = ReplicatedStorage:WaitForChild("RollbackEvent")

-- 롤백 데이터 저장소
local rollbackData = {
    inventory = {},
    position = Vector3.new(0, 0, 0),
    health = 0
}

-- UI 생성
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "RollbackUI"
ScreenGui.ResetOnSpawn = false
ScreenGui.IgnoreGuiInset = true
ScreenGui.Parent = game:GetService("CoreGui")

-- 버튼 생성 함수
local function createButton(name, position, text, callback)
    local button = Instance.new("TextButton")
    button.Name = name
    button.Size = UDim2.new(0, 200, 0, 50)
    button.Position = position
    button.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Font = Enum.Font.SourceSans
    button.TextSize = 24
    button.Text = text
    button.Parent = ScreenGui
    button.MouseButton1Click:Connect(callback)
end

-- 롤백 버튼 기능
createButton("RollbackButton", UDim2.new(0, 100, 0, 100), "Rollback", function()
    -- 인벤토리 상태 저장
    rollbackData.inventory = {}
    for _, item in pairs(LocalPlayer.Backpack:GetChildren()) do
        -- 아이템 복사 (복제)
        local itemClone = item:Clone()
        table.insert(rollbackData.inventory, itemClone)
    end

    -- 위치와 체력 상태 저장
    rollbackData.position = Character.HumanoidRootPart.Position
    rollbackData.health = Character.Humanoid.Health

    -- 서버로 롤백 데이터 전달
    rollbackEvent:FireServer(rollbackData)

    print("Rollback point saved with item copy.")
end)

-- Rejoin 버튼 기능
createButton("RejoinButton", UDim2.new(0, 100, 0, 160), "Rejoin", function()
    -- 서버 재접속
    game:GetService("TeleportService"):Teleport(game.PlaceId, LocalPlayer)
end)
